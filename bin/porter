#!/usr/bin/env php
<?php

// Disable HTML errors.
ini_set('html_errors', 'off');

// Bootstrap.
define('CONSOLE', true);
require_once dirname(__DIR__) . '/bootstrap.php';

// Parse CLI request.
$request = new \NitroPorter\Request();
$request->parseCli();

// Do request.
$package = \NitroPorter\ExportFactory::build();
$package->run();

// Console output should end in newline.
echo "\n";
