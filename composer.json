{
    "name": "linc/nitro-porter",
    "type": "project",
    "description": "Nitro Porter is a tool for exporting forum data to a portable format.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Lincoln Russell",
            "email": "lincoln@icrontic.com"
        },
        {
            "name": "Todd Burry",
            "email": "todd@vanillaforums.com"
        },
        {
            "name": "Alexandre Chouinard",
            "email": "daazku@gmail.com"
        }
    ],
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=PSR12 ./src",
        "test": "vendor/bin/phpunit --no-coverage --no-extensions --colors=always",
        "build": "cd build; ../vendor/bin/phing; cd ..",
        "phinx": "vendor/bin/phinx",
        "seed": "vendor/bin/phinx seed:run",
        "stan": "vendor/bin/phpstan analyse src tests"
    },
    "bin": [
        "bin/porter"
    ],
    "require": {
        "php": ">=7.3",
        "doctrine/orm": "^2"
    },
    "suggest": {
        "ext-gd": "For transforming image attachments.",
        "ext-json": "Using a JSON data source.",
        "ext-pdo": "Using a MySQL data source.",
        "ext-mysqli": "Using a MySQL data source."
    },
    "require-dev": {
        "phing/phing": "^2.0",
        "robmorgan/phinx": "^0.12",
        "fakerphp/faker": "^1.16",
        "squizlabs/php_codesniffer": "^3",
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1"
   },
   "autoload": {
       "psr-4": {
            "NitroPorter\\": "src/"
       },
       "files": [
            "src/Functions/core.php",
            "src/Functions/filter.php",
            "src/Functions/structure.php"
       ]
   }
}
